<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/backImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        app:cardCornerRadius="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_rectangle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/arrov_left" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/editImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#4680FF"
        app:cardCornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/edit_icon" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileImgCard"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="31.4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backImg">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="match_parent"
            android:src="@drawable/profile_img_rectangle"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/profileAlphaTv"
            android:gravity="center"
            android:fontFamily="@font/avenir_next"
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:text="AA"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profileNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sofiya_pro_medium"
        android:text="Unknown"
        android:textColor="#4E4B66"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImgCard" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiya_pro_medium"
        android:text="Unknown"
        android:textColor="#6E7191"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileNameTv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#00BA88"
        app:cardCornerRadius="14dp"
        app:layout_constraintEnd_toStartOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/chat" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#4680FF"
        app:cardCornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toStartOf="@+id/cardView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardView2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/call" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#F55858"
        app:cardCornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toStartOf="@+id/cardView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardView">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/video" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#D9DBE9"
        app:cardCornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cardView3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/message" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/recImg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <TextView
        android:id="@+id/mobileTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sofiya_pro_medium"
        android:text="@string/fragment_profile_mobile"
        android:textColor="#6E7191"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recImg" />

    <TextView
        android:id="@+id/phoneNumberTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/sofiya_pro_medium"
        android:text="No number"
        android:textColor="#14142B"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileTv" />

    <ImageView
        android:id="@+id/phoneImg"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/phone_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileTv" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:id="@+id/mesageImg"
        android:src="@drawable/chat_ic"
        app:layout_constraintEnd_toStartOf="@id/phoneImg"
        app:layout_constraintTop_toBottomOf="@id/mobileTv" />

    <ImageView
        android:id="@+id/locationImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/location_ic"
        app:layout_constraintBottom_toBottomOf="@+id/qrCodeImg"
        app:layout_constraintEnd_toStartOf="@+id/qrCodeImg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/qrCodeImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:src="@drawable/qr_code_ic"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/qrCodeTv"
        app:layout_constraintEnd_toStartOf="@+id/shareImg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/locationImg" />

    <ImageView
        android:id="@+id/shareImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/share_ic"
        app:layout_constraintBottom_toBottomOf="@+id/qrCodeImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/qrCodeImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiya_pro_medium"
        android:text="@string/fragment_profile_share_location"
        android:textColor="#6E7191"
        android:textSize="12sp"
        android:id="@+id/shareLocationTv"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/locationImg"
        app:layout_constraintStart_toStartOf="@+id/locationImg"
        app:layout_constraintTop_toBottomOf="@+id/locationImg" />

    <TextView
        android:id="@+id/qrCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiya_pro_medium"
        android:text="@string/fragment_profile_qr_code"
        android:textColor="#6E7191"
        android:layout_marginBottom="40dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/qrCodeImg"
        app:layout_constraintStart_toStartOf="@+id/qrCodeImg" />

    <TextView
        android:id="@+id/shareTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sofiya_pro_medium"
        android:text="@string/fragment_profile_share_contact"
        android:textColor="#6E7191"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/shareImg"
        app:layout_constraintStart_toStartOf="@+id/shareImg"
        app:layout_constraintTop_toBottomOf="@+id/shareImg" />

</androidx.constraintlayout.widget.ConstraintLayout>