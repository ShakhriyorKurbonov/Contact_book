<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="104dp"
        app:cardCornerRadius="24dp"
        android:id="@+id/profileImgCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_height="104dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/profileImg"
            android:src="@drawable/profile_img_rectangle"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/NameAlpha"
            android:text="AA"
            android:gravity="center"
            android:fontFamily="@font/avenir_next"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profileImgCard"
        app:layout_constraintStart_toStartOf="@id/profileImgCard"
        app:layout_constraintEnd_toEndOf="@id/profileImgCard"
        android:layout_marginTop="8.75dp"
        android:fontFamily="@font/sofia_pro_semi_bold"
        android:textSize="14sp"
        android:text="Jame mich..."
        android:id="@+id/profileNameTv"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/profileNameTv"
        app:layout_constraintStart_toStartOf="@id/profileImgCard"
        app:layout_constraintEnd_toEndOf="@id/profileImgCard"
        android:fontFamily="@font/sofiya_pro_regular"
        android:text="12 hour ago"
        android:textColor="#000000"
        android:id="@+id/timeTv"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>